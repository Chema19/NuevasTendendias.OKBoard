<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.RegisterActivity">


    <TextView
        android:id="@+id/titleRegisterTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REGISTRO"
        android:textColor="@color/textPrimary"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:layout_marginLeft="40dp" />

    <EditText
        android:id="@+id/credencialesEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Usuario"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@id/titleRegisterTextView"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        style="@style/MyEditTextStyle"/>
    <EditText
        android:id="@+id/contraseniaEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contraseña"
        tools:ignore="MissingConstraints"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/credencialesEditText"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        style="@style/MyEditTextStyle"/>
    <EditText
        android:id="@+id/contraseniaagainEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Reingrese la Contraseña"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@id/contraseniaEditText"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        style="@style/MyEditTextStyle"/>

    <Button
        android:id="@+id/registerProfileButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrar"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@id/contraseniaagainEditText"
        android:layout_marginTop="30dp"
        android:textColor="@color/colorWhite"
        android:background="@color/buttonColorRed"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="90dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>