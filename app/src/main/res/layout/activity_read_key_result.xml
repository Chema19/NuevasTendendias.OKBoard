<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ReadKeyResultActivity">
    <TextView
        android:id="@+id/keyTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="@dimen/titleTextSize"
        android:layout_marginTop="150dp"
        android:layout_marginStart="@dimen/startEndMarginValue"
        android:layout_marginEnd="@dimen/startEndMarginValue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Key Result Title"
        />
    <TextView
        android:id="@+id/progressTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/startEndMarginValue"
        android:layout_marginEnd="@dimen/startEndMarginValue"
        android:layout_marginTop="75dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/keyTitleTextView"
        android:text="Progreso"/>
    <TextView
        android:id="@+id/keyProgressTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginStart="@dimen/startEndMarginValue"
        android:layout_marginEnd="@dimen/startEndMarginValue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progressTextView"/>

    <ProgressBar
        android:id="@+id/keyProgressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_marginStart="@dimen/startEndMarginValue"
        android:layout_marginEnd="@dimen/startEndMarginValue"
        app:layout_constraintTop_toBottomOf="@id/keyProgressTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:progressTint="@color/progressTintColor"
        android:progressBackgroundTint="@color/progressBackgroundColor"
        />

    <Button
        android:id="@+id/deleteKeyResultButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/updateKeyResultButton"
        android:background="@color/buttonColorGray"
        android:textColor="@color/colorWhite"
        android:text="Eliminar"
        />
    <Button
        android:id="@+id/updateKeyResultButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:layout_marginBottom="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/deleteKeyResultButton"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/buttonColorRed"
        android:textColor="@color/colorWhite"
        android:text="Editar"
        />
</androidx.constraintlayout.widget.ConstraintLayout>